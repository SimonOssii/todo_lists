extends layout

block page
        .container
            .row.content
                .span6.offset3
                    .alert.alert-success.list-font
                        form(method='post',action='/insert')
                            p
                                標題:
                            input.span5(name='list_title',type="text",class="msgbox2",value=add_title)
                            p
                                日期/時間:
                            input.span5.Wdate(name='list_date',type="text",onfocus="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm'})")
                            p
                                備註:
                            textarea.span5(name='list_content',type="text",rows="3")
                            button.btn.btn-primary(type="submit",href='/')
                                新增
                            button.btn.btn-primary(href='/')
                                取消
    
