extends layout

block content
    .container
        .row.content
            .span6.offset3
                table.table.table-hover.list-font
                    thead
                        tr
                            th
                                    完成
                            th
                                    待辦事項
                            th
                                    到期日
                    tbody
                        for todo_lists in all_lists
                            tr.info
                                td
                                    input.check(name=todo_lists._id,type="checkbox",value=todo_lists.status)
                                td.search(name=todo_lists._id)
                                    |#{todo_lists.item.title}
                                td.search(name=todo_lists._id)
                                    |#{todo_lists.item.expire_date}
                                td
                                    img.del(name=todo_lists._id,src="/images/delete.png")
